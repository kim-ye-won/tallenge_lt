<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ListSetActivity">
    //체크리스트 분야설정 UI

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bck_btn"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:backgroundTint="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="교환 체크리스트 설정"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="491dp"
        android:background="@color/tallengeblue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <Space
                android:layout_width="40dp"
                android:layout_height="30dp" />

            <ListView
                android:id="@+id/listview2"
                android:layout_width="365dp"
                android:layout_height="420dp"
                android:layout_gravity="center"
                android:background="@color/ta_blue_dark"
                android:dividerHeight="4dp"></ListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp" />

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/white" />

    <Button
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/add_list"
        android:text="+"
        app:backgroundTint="#B3B2B2" />


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/ta_bar" />

    <com.google.android.material.tabs.TabLayout
        android:background="@color/tallengeblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_home_24" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_chat_bubble_outline_24" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_notifications_none_24" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_person_outline_24" />
    </com.google.android.material.tabs.TabLayout>
</LinearLayout>