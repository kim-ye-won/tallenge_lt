<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/btnbk"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:backgroundTint="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/setbtn"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:text="재능교환하기/설정"
            android:textSize="16sp"
            app:backgroundTint="#AEACAC" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        //등급
        <TextView
            android:id="@+id/tier"
            android:layout_width="227dp"
            android:layout_height="match_parent"
            android:textSize="20sp" />
        //닉네임
        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:id="@+id/nickname"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>
    <!--채팅 레이아웃-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvmessage"
        android:layout_width="match_parent"
        android:layout_height="489dp"
        android:background="@color/tallengeblue">

    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <EditText
            android:layout_width="350dp"
            android:hint="채팅내용"
            android:textSize="16sp"
            android:layout_height="50dp"
            android:id="@+id/inputText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_send_24"
            app:backgroundTint="@color/black"
            android:id="@+id/pushText"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <com.google.android.material.tabs.TabLayout
        android:background="@color/tallengeblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_home_24" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_chat_bubble_outline_24" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_notifications_none_24" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_person_outline_24" />
    </com.google.android.material.tabs.TabLayout>

</LinearLayout>




