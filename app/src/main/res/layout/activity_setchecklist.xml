<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SetCheckListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="70dp"
            app:backgroundTint="@color/black"
            android:background="@drawable/ic_baseline_arrow_back_24" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="체크리스트 설정"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"

        android:layout_height="495dp"
        android:background="@color/tallengeblue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="330dp"
                    android:id="@+id/btn_chatitem"
                    android:layout_height="60dp"
                    android:textColor="@color/black"
                    android:text="제목"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textSize="20sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="272dp"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="55dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:text="-"
                    android:textSize="25sp"
                    app:backgroundTint="#B3B2B2" />


            </LinearLayout>

            <Button
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginRight="40dp"
                android:background="#B3B2B2"
                android:text="+"
                android:textSize="16sp"
                app:backgroundTint="#BCB8B8" />


        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="선택완료"
        app:backgroundTint="#B3B2B2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>

    <com.google.android.material.tabs.TabLayout
        android:background="@color/tallengeblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_home_24" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_chat_bubble_outline_24" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_notifications_none_24" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_person_outline_24" />
    </com.google.android.material.tabs.TabLayout>


</LinearLayout>