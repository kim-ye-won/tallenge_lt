<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ChooseListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnbk2"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_baseline_arrow_back_24" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <!--상단버튼        -->
        <Button
            android:id="@+id/set"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="교환체크리스트 설정" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="교환 리스트 선택"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:background="@color/tallengeblue">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="490dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <Space
                android:layout_width="30dp"
                android:layout_height="40dp"/>

            <ListView
                android:id="@+id/listview1"
                android:layout_width="350dp"
                android:layout_height="490dp"
                android:background="@color/ta_blue_dark"
                android:choiceMode="singleChoice" />

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>
    <Button
        android:id="@+id/finSet"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="선택완료"
        android:textSize="16sp"
        android:layout_gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"

            android:background="@drawable/ic_baseline_home_24"
            app:backgroundTint="@color/tallengeblue" />


        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_chat_bubble_outline_24"
            android:backgroundTint="@color/tallengeblue"
            app:backgroundTint="@color/tallengeblue" />


        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"

            android:background="@drawable/ic_baseline_notifications_none_24"
            app:backgroundTint="@color/tallengeblue" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"

            android:background="@drawable/ic_baseline_person_outline_24"
            app:backgroundTint="@color/tallengeblue" />

    </LinearLayout>

</LinearLayout>